#!/usr/bin/env zsh
source ~/.zshrc

echo -e "[vim] update plugins..."
vim +PluginInstall +qall
echo -e "\t ~ DONE"

echo -e "[rcm] update all rc file..."
rcup -i
echo -e "\t ~ DONE"

echo "[mkdir] make all custom directories..."
mkdir $MY_DBASE -p
mkdir $MY_SRC -p
mkdir $MY_REPO -p
mkdir $MY_PREPO -p
mkdir $MY_PROJ -p
mkdir $MY_BOX -p
mkdir $MY_GO -p
mkdir $MY_OPT -p
echo -e "\t ~ DONE"
